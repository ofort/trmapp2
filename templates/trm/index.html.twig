{% extends 'base.html.twig' %}

{% block title %}Trm index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-start">
            <div class="col-2"></div>
            <div class="col-8">
                <h1>Trm index</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for trm in trms %}
                            <tr>
                                <td>{{ trm.id }}</td>
                                <td>{{ trm.Name }}</td>
                                <td>
                                    <p>{{ trm.Description }}</p>
                                    {% set pluriel = '' %}
                                    {% if trm.trmVersions|length > 1 %}
                                        {% set pluriel = 's' %}
                                    {% endif %}
                                    <p>{{ trm.trmVersions|length }} version{{ pluriel }} liée{{ pluriel}}  </p>
                                </td>
                                <td>
                                    <a href="{{ path('app_trm_show', {'id': trm.id}) }}">Voir</a>
                                    <a href="{{ path('app_trm_edit', {'id': trm.id}) }}">Modifier</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Commencez en créant un TRM</td>
                            </tr>
                        {% endfor %}
                     </tbody>
                </table>

                <a href="{{ path('app_trm_new') }}">Ajouter un TRM</a>

            </div>
        </div>
    </div>
{% endblock %}
